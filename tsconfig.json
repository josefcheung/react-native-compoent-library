{
  "compilerOptions": {
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "declarationDir": "types",
    "jsx": "react",
    "types": [
      "node"
    ],
    "module": "ESNext",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "outDir": "dist",
    "sourceMap": true,
    "strict": true,
    "target": "es5"
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "./App.tsx",
    "storybook",
    "src/stories",
    "**/*.stories.tsx",
    "node_modules"
  ],
  "extends": "expo/tsconfig.base"
}
